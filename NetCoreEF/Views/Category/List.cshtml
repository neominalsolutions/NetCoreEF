
@model IEnumerable<CategoryDto>




<table class="table table-striped table-hover">
 
  <thead>
    <tr>
      <th> @Html.DisplayNameFor(model => model.CategoryName) </th>

      <th> @Html.DisplayNameFor(model => model.Description) </th>
      <th> İşlemler </th>
    </tr>
 
  </thead>

  <tbody>
    @foreach (var category in Model)
    {
      <tr>
        <td>
          @category.CategoryName
        </td>
        <td>
          @category.Description
        </td>
        <td>
          <a asp-action="Delete" asp-controller="Category" asp-route-id="@category.ProtectorId" class="btn btn-danger">Sil</a>
          &nbsp;
          <a asp-action="Update" asp-controller="Category" asp-route-id="@category.ProtectorId" class="btn btn-primary">Düzenle</a>
          &nbsp;
          <a asp-route="kategoriDetay" asp-route-cId="@category.ProtectorId" class="btn btn-warn">Detay</a>
        </td>
      </tr>
    }
 
  </tbody>

</table>