@model List<Product>


<div class="row row-cols-1 row-cols-md-2 g-4">


  @foreach (var product in Model)
  {
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">@product.ProductName</h5>
          <p class="card-text">@product.Category.CategoryName</p>
          <p class="card-text"><small class="text-muted">Fiyat: @product.UnitPrice</small></p>
        </div>
        <div class="card-footer">
          <button onclick="addToCart('@product.ProductId','@product.ProductName')" class="btn btn-primary">Sepete Ekle</button>
        </div>
      </div>
    </div>
  }



</div>



